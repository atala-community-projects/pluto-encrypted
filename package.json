{
  "name": "pluto-encrypted",
  "version": "0.0.9",
  "description": "A \"secure\" IndexDB Wrapper for AtalaPrism -> Pluto storage.",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "type": "module",
  "scripts": {
    "postinstall": "cd sdk && npm run build",
    "clean": "rm -rf build",
    "build": "npx rollup -c rollup/rollup.mjs",
    "prepublishOnly": "npm run build",
    "test": "jest tests/*.test.ts",
    "coverage": "npm run test -- --coverage"
  },
  "files": [
    "build/*"
  ],
  "jest": {
    "collectCoverage": true,
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [],
    "workerThreads": true,
    "maxWorkers": 1,
    "transformIgnorePatterns": [
      "node_modules/(?!@noble)",
      "node_modules/(?!sinon)"
    ],
    "moduleNameMapper": {
      "^uint8arrays$": "<rootDir>/node_modules/uint8arrays/cjs/src",
      "^uint8arrays/(.*)$": "<rootDir>/node_modules/uint8arrays/cjs/src/$1",
      "^multiformats/(.*)$": "<rootDir>/node_modules/multiformats/cjs/src/$1",
      "^rxdb/(.*)$": "<rootDir>/node_modules/rxdb/$1",
      "^dexie$": "<rootDir>/node_modules/dexie",
      "^core-js/modules/(.*)$": "<rootDir>/node_modules/core-js/modules/$1"
    },
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "coverageReporters": [
      "json-summary",
      "lcov",
      "text"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 2,
        "functions": 2,
        "lines": 2,
        "statements": 2
      }
    },
    "coverageDirectory": "coverage"
  },
  "jest-junit": {
    "outputDirectory": "coverage",
    "outputName": "junit.xml"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elribonazo/pluto-encrypted.git"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-typescript": "^7.22.15",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-inject": "^5.0.3",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.4",
    "@rollup/plugin-wasm": "^6.1.3",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.5.0",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.55.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.47.0",
    "eslint-config-next": "^12.0.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "expect": "^29.7.0",
    "fake-indexeddb": "^4.0.2",
    "file-loader": "^6.2.0",
    "husky": "^7.0.4",
    "istanbul-badges-readme": "^1.8.5",
    "jasmine": "^5.1.0",
    "jest": "^29.5.0",
    "jest-coverage-badges": "^1.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-mock": "^29.7.0",
    "lerna": "^7.2.0",
    "mock-aws-s3": "^4.0.2",
    "postcss": "^8.3.11",
    "prettier": "^2.4.1",
    "rimraf": "^5.0.1",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-ignore": "^1.0.10",
    "rollup-plugin-jscc": "^2.0.0",
    "rollup-plugin-modify": "^3.0.0",
    "rollup-plugin-multi-input": "^1.4.1",
    "rollup-plugin-natives": "^0.7.8",
    "rollup-plugin-node-externals": "^6.0.1",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-polyfill-node": "^0.12.0",
    "rollup-plugin-typescript": "^1.0.1",
    "rollup-plugin-typescript2": "^0.34.1",
    "typescript": "^5.1.6"
  },
  "keywords": [],
  "author": "elribonazo@gmail.com",
  "license": "Apache-2.0",
  "dependencies": {
    "@input-output-hk/atala-prism-wallet-sdk": "file:./sdk",
    "dexie": "^3.2.4",
    "dexie-encrypted": "https://github.com/metafig/dexie-encrypted.git",
    "reflect-metadata": "^0.1.13",
    "rxdb": "^14.17.0",
    "uuid": "^9.0.1"
  }
}
